<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
               xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Мое первое окно" Height="200" Width="300" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Background="Lavender">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="Wrap" Text="Съешь этих прекрасных булочек" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
        <TextBlock TextWrapping="Wrap" Text="Съешь этих прекрасных булочек" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2"/>
        <GridSplitter Grid.Column="1" Width="10" HorizontalAlignment="Center"
                      VerticalAlignment="Stretch" Background="AliceBlue" />
    </Grid>

</Window>
